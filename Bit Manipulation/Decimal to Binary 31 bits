#include <iostream>
#include <bitset>
using namespace std;

typedef long long ll;

// Function to convert decimal to binary in 31 bits
string dtb31(ll n) {
    bitset<31> binary(n);
    return binary.to_string();
}

int main() {
    ll n = 15; // Example number
    cout << "Decimal " << n << " in 31-bit binary is: " << dtb31(n) << endl;
    return 0;
}
